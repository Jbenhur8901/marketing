# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# WhatsApp Configuration
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token-change-this

# Application Configuration
# Note: API keys are now managed in database (api_keys table)
# Use POST /api/api-keys to create keys for each workspace
PORT=3000
NODE_ENV=development

# API Configuration
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_MS=60000

# Bulk Verification Limits
BULK_VERIFICATION_MAX_JOBS_PER_HOUR=10
BULK_VERIFICATION_CHUNK_SIZE=50
BULK_VERIFICATION_RATE_LIMIT=20

# Broadcasting Limits
BROADCAST_DEFAULT_RATE_LIMIT=10
BROADCAST_MAX_RATE_LIMIT=100
BROADCAST_FAILURE_THRESHOLD=30

# Cache Configuration
VERIFICATION_CACHE_DAYS=30

# Media Storage Configuration
MEDIA_STORAGE=supabase
SUPABASE_MEDIA_BUCKET=whatsapp-media
LOCAL_MEDIA_PATH=./media
